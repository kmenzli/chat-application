<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>exo-addons-chat-extension</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/chat/webapps</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.chat:application:war</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>chat.war</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/webapps</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.chat:server:war</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>chatServer.war</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/webapps</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.chat:exo-addons-chat-extension-community:war</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>chat-extension.war</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <!-- Libraries -->
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.chat:exo-addons-chat-extension-config-community:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <!-- FIN -->
        <!-- Storage API -->
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>org.mongodb:mongo-java-driver:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.storage:exo-storage-api-mongodb:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.storage:exo-storage-api-jcr:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>org.exoplatform.addons.storage:exo-storage-api-core:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>de.flapdoodle.embed:de.flapdoodle.embed.mongo:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/chat/lib</outputDirectory>
            <includes>
                <include>de.flapdoodle.embed:de.flapdoodle.embed.process:jar</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <!-- FIN -->
    </dependencySets>
</assembly>